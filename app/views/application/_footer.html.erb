<%= tag.footer class: footer_classes do %>
  <div class="container">
    <nav
      aria-label="footer"
      class="
        flex flex-col items-center justify-between w-full gap-6 pt-16 pb-16 space-y-6
        md:space-y-0 md:flex-row md:items-start md:pt-14 lg:pb-40
      "
    >
      <div
        class="
          flex flex-col items-center h-full space-y-5 md:items-start max-w-[18rem]
        "
      >
        <%= link_to root_path, class: "text-color-text flex flex-col items-center space-y-3 text-center md:flex-row md:items-start md:text-left md:space-x-2 md:space-y-0" do %>
          <div class="flex-shrink-0 w-12 md:w-8">
            <%= inline_svg_tag "joy-logo.svg",
            class: "fill-theme-text",
            style: "max-width: 32px;" %>
