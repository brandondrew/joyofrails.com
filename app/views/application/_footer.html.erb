          <div class="mt-1 text-lg text-theme-text"><span class="font-bold">Sharing and experiencing the</span>
            <span class="font-logo">Joy of Rails</span>
          </div>
        <% end %>
      </div>
      <div
        class="
          text-gray-text
          grid items-center w-full grid-cols-1 text-center md:grid-cols-2 lg:pr-6
          md:gap-10 md:text-left md:items-start md:w-auto
        "
      >
        <ul>
          <li class="py-1 leading-relaxed md:text-sm"><a
              class="
                transition-colors duration-150 ease-in-out hover:text-theme-link-hover
              "
              href="/articles"
            >Articles</a></li>
        </ul>
        <ul>
          <li class="py-1 leading-relaxed md:text-sm"><a
              class="
                transition-colors duration-150 ease-in-out hover:text-theme-link-hover
              "
              href="mailto:support@joyofrails.com"
            >support@joyofrails.com</a></li>
        </ul>
      </div>
    </nav>
    <small
      class="
        flex items-center justify-center w-full py-6 space-x-6
        text-xs text-gray-text
        md:justify-end
      "
    >
