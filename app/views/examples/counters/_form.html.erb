<% if counter.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(counter.errors.count, "error") %> prohibited this counter from being saved:</h2>

    <ul>
      <% counter.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= tag.div data: { controller: "plausible", plausible_event_value: "Examples Counter Click" }, class: "flex items-center gap-x-3 mt-3" do %>
  <%= button_to "Increment", examples_counters_path(counter: { count: counter.count + 1 }), method: :put, class: "button primary", form: { data: { action: "submit->plausible#send" } } %>
  <%= button_to "Decrement", examples_counters_path(counter: { count: counter.count - 1 }), method: :put, class: "button pink", form: { data: { action: "submit->plausible#send" } } %>
  <%= button_to "Reset", examples_counters_path, method: :delete, class: "button secondary", form: { data: { action: "submit->plausible#send" } } %>
<% end %>
