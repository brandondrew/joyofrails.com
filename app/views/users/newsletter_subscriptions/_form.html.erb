<%= form_with model: @user, url: users_newsletter_subscriptions_path, class: "lg:w-1/2" do |f| %>
  <div class="flex flex-row items-center mt-2">
    <div class="flex-grow mr-2">
      <%= f.email_field :email, type: :email, autocomplete: "email", placeholder: "your@joymail.com", class: "
          flex-1 rounded bg-white/5 py-1.5 pl-3
         sm:leading-6
          focus-ring focus:ring-0
          ring-1 ring-inset ring-white/10
          w-full lg:min-w-[36ch]
        " %>
    </div>
    <div>
      <%= f.submit "Subscribe", class: "button primary focus-ring" %>
    </div>
  </div>
  <% if f.object.errors.any? %>
    <div class="text-red-500">
      <%= f.object.errors.full_messages.first %>
    </div>
  <% end %>
<% end %>
